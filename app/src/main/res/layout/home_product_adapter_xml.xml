<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp">
    <ImageView
        android:layout_width="140px"
        android:layout_height="100px"
        android:layout_marginTop="0dp"
        android:layerType="hardware"
        android:id="@+id/adapter_imageview"
        android:layout_marginLeft="-32dp"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-200dp"
        android:layout_weight="1"
        android:layout_marginTop="15sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/adapter_titlename"
            android:text="东方明珠KTV"
            android:gravity="center"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Y500/人起"
            android:textColor="#FF0000"
            android:gravity="center"
            android:id="@+id/adapter_jiage" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/adapter_didian"
            android:text="明珠广场     KTV"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="-120dp"
        >
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:src="@drawable/list_phone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/shizhon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:id="@+id/adapter_shijina"
                android:layout_marginLeft="2dp"
                android:text="19:00-01:00"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>